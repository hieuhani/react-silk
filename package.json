{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run --parallel build",
    "build:lib": "lerna run --parallel --scope *-silk-ui build",
    "build:docs": "lerna run --parallel --scope *-silk-docs build",
    "dev": "lerna run --parallel dev",
    "clean": "rimraf packages/**/dist",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore .",
    "prebump": "yarn build",
    "bump": "lerna publish",
    "predeploy": "lerna run --parallel --scope *-silk-docs build:gh",
    "deploy": "gh-pages -d packages/react-silk-docs/public",
    "test": "lerna run --parallel test",
    "test:coverage": "lerna run test:coverage",
    "test:coverage-ci": "lerna run --parallel test:coverage-ci",
    "test:watch": "lerna run --parallel test:watch"
  },
  "files": [
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint --fix",
        "yarn test",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^23.3.13",
    "@types/node": "^10.12.19",
    "@types/react": "^16.7.22",
    "@types/react-native": "^0.57.32",
    "@types/react-test-renderer": "^16.0.3",
    "eslint": "^5.12.1",
    "eslint-config-prettier": "^4.0.0",
    "eslint-config-typescript-recommended": "^1.4.17",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-typescript": "1.0.0-rc.3",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "jest": "^24.0.0",
    "lerna": "^3.10.7",
    "lint-staged": "^8.1.1",
    "react": "^16.7.0",
    "react-art": "^16.7.0",
    "react-native-web": "^0.10.0",
    "react-silk-jest-preset": "^0.1.1",
    "react-spring": "^8.0.7",
    "react-test-renderer": "^16.7.0",
    "rimraf": "^2.6.3",
    "rollup": "^1.1.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "ts-jest": "^23.10.5",
    "typescript": "~3.1.1"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
