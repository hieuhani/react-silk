{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "yarn build:lib && yarn build:docs && yarn build:example",
    "build:ui": "lerna run --parallel --scope @react-silk/ui build",
    "build:form": "lerna run --parallel --scope @react-silk/form build",
    "build:lib": "yarn build:ui && yarn build:form",
    "build:docs": "lerna run --parallel --scope @react-silk/docs build",
    "dev": "lerna run --parallel dev",
    "clean": "rimraf packages/**/dist",
    "lint": "eslint --ext .ts,.tsx --ignore-path .gitignore .",
    "prebump": "yarn build",
    "bump": "lerna publish",
    "predeploy": "lerna run --parallel --scope *-silk-docs build:gh",
    "deploy": "gh-pages -d packages/docs/public",
    "test": "lerna run --parallel test",
    "test:coverage": "lerna run test:coverage",
    "test:coverage-ci": "lerna run --parallel test:coverage-ci",
    "test:watch": "lerna run --parallel test:watch"
  },
  "files": [
    "public"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{ts,tsx}": [
        "yarn lint --fix",
        "yarn test",
        "git add"
      ],
      "*.{json,md}": [
        "prettier --write",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.0",
    "@types/react": "^16.9.23",
    "@types/react-native": "^0.61.20",
    "@types/react-test-renderer": "^16.9.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-config-typescript-recommended": "^1.4.17",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-typescript": "^0.14.0",
    "gh-pages": "^2.2.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "react": "^16.13.0",
    "react-art": "^16.13.0",
    "react-native-web": "^0.12.2",
    "react-test-renderer": "^16.13.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.0.0",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-size-snapshot": "^0.11.0",
    "rollup-plugin-typescript2": "^0.26.0",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {}
}
